<%= form_for(@style) do |f| %>
  <% if @style.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@style.errors.count, "error") %> prohibited this style from being saved:</h2>

      <ul>
      <% @style.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :bodytype %><br />
    <%= f.text_field :bodytype %>
  </div>
  <div class="field">
    <%= f.label :need %><br />
    <%= f.text_field :need %>
  </div>
  <div class="field">
    <%= f.label :texture %><br />
    <%= f.text_field :texture %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :statement %><br />
    <%= f.text_field :statement %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
